<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<div class="grid">
    <% for(let post of posts) {%>
    <article class="card product-item">
        <header class="card__header">
            <h1 class="product__title">Posted by <%= post.user_id %></h1>
        </header>
        <div class="card__image">
            <img src="/pics/<%= post.file_name %>"
                alt="foto" width="150px" height="250px">
        </div>
        <div class="card__content">
            <p class="product__description"><%= post.post_desc %></p>
        </div>
        <div class="card__actions">
            <form action="/cart" method="POST">
                <button class="btn" type="submit">Like</button>
                <button class="btn" type="submit">Comment</button>
                <input type="hidden" name="productId" value="vlera">
            </form>
        </div>
    </article>
    <% } %>
</div>    
</body>
</html>